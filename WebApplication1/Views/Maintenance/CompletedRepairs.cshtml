@model IEnumerable<WebApplication1.ViewModels.PendingLeaderCompletionViewModel>
@using System.Globalization

@{
    ViewData["Title"] = "Penyelesaian Perbaikan";
    var cultureInfo = new CultureInfo("id-ID");
}

<!-- Notifikasi Seragam -->
@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show custom-alert" role="alert">
        <i class="fas fa-check-circle me-2"></i>
        <strong>Berhasil!</strong> @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show custom-alert" role="alert">
        <i class="fas fa-times-circle me-2"></i>
        <strong>Gagal!</strong> @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@if (TempData["Warning"] != null)
{
    <div class="alert alert-warning alert-dismissible fade show custom-alert" role="alert">
        <i class="fas fa-exclamation-triangle me-2"></i>
        <strong>Peringatan!</strong> @TempData["Warning"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage as string))
{
    <div class="alert alert-danger" role="alert">
        <i class="fas fa-exclamation-triangle me-2"></i>
        @ViewBag.ErrorMessage
    </div>
}

<div class="content-header">
    <div class="page-title">
        <h1><i class="fas fa-check-circle me-2"></i>Penyelesaian Perbaikan</h1>
        <p class="text-muted">Jangan lupa selesaikan laporan untuk memudahkan pemantauan!</p>
    </div>
</div>

<div class="content-card">
    <div class="card-header">
        <h5 class="mb-0"><i class="fas fa-list me-2"></i>Menunggu Penyelesaian</h5>
        <div class="search-box">
            <i class="fas fa-search"></i>
            <input type="text" id="searchInput" class="form-control" placeholder="Cari mesin atau pelapor..." />
        </div>
    </div>

    @if (!Model.Any() && string.IsNullOrEmpty(ViewBag.ErrorMessage as string))
    {
        <div class="card-body text-center py-5">
            <i class="fas fa-info-circle fa-3x text-muted mb-3"></i>
            <p class="mb-0">Tidak ada data perbaikan yang menunggu untuk diselesaikan saat ini.</p>
        </div>
    }
    else if (Model.Any())
    {
        <div class="table-responsive">
            <table class="custom-table w-100" id="repairTable">
                <thead>
                    <tr>
                        <th><i class="fas fa-cogs me-2"></i>Detail Mesin</th>
                        <th><i class="fas fa-user-tag me-2"></i>Pelapor</th>
                        <th><i class="fas fa-calendar-check me-2"></i>Tanggal Persetujuan KYT</th>
                        <th class="text-center"><i class="fas fa-wrench me-2"></i>Aksi</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <div class="machine-info">
                                    <span class="machine-name">@Html.DisplayFor(modelItem => item.MachineName)</span>
                                    <span class="machine-code">@Html.DisplayFor(modelItem => item.ProductionLineName)</span>
                                </div>
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ReporterName)
                            </td>
                            <td>
                                <div class="date-info">
                                    @if (item.KytApprovalDate.HasValue)
                                    {
                                        <span class="date">@item.KytApprovalDate.Value.ToString("dd MMMM yyyy", cultureInfo)</span>
                                        <span class="time">@item.KytApprovalDate.Value.ToString("HH:mm 'WIB'", cultureInfo)</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning text-dark">Belum Disetujui</span>
                                    }
                                </div>
                            </td>
                            <td class="text-center">
                                <div class="action-buttons">
                                    <form asp-action="MarkRepairAsComplete" asp-controller="Maintenance" method="post" class="d-inline">
                                        <input type="hidden" name="logId" value="@item.LogId" />
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-success btn-sm">
                                            <i class="fas fa-check me-1"></i> Selesaikan
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="card-footer">
            <div class="pagination-info">Menampilkan @Model.Count() data</div>
        </div>
    }
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const searchInput = document.getElementById('searchInput');
            const table = document.getElementById('repairTable');
            const rows = table.getElementsByTagName('tbody')[0].getElementsByTagName('tr');

            searchInput.addEventListener('keyup', function () {
                const filter = searchInput.value.toLowerCase();
                for (let i = 0; i < rows.length; i++) {
                    let cells = rows[i].getElementsByTagName('td');
                    let found = false;
                    for (let j = 0; j < cells.length; j++) {
                        let cell = cells[j];
                        if (cell) {
                            if (cell.innerHTML.toLowerCase().indexOf(filter) > -1) {
                                found = true;
                                break;
                            }
                        }
                    }
                    if (found) {
                        rows[i].style.display = "";
                    } else {
                        rows[i].style.display = "none";
                    }
                }
            });
        });
    </script>
}