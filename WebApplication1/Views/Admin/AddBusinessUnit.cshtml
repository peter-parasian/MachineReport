@model WebApplication1.Models.BusinessUnit

@{
    ViewData["Title"] = "Tambah Business Unit";
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show custom-alert" role="alert">
        <i class="fas fa-check-circle me-2"></i>
        <strong>Berhasil!</strong> @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="content-header">
    <div class="page-title">
        <h1><i class="fas fa-building me-2"></i>Tambah Business Unit</h1>
        <p class="text-muted">Silahkan tambah bisnis unit !</p>
    </div>
</div>

<div class="content-card">
    <div class="card-body p-4">
        @Html.AntiForgeryToken()
<form asp-action="AddBusinessUnit" method="post">
    <div class="mb-4">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="mt-4 d-flex justify-content-end">
        <button type="submit" class="btn btn-primary">
            <i class="fas fa-paper-plane me-2"></i>Tambah
        </button>
    </div>
</form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}